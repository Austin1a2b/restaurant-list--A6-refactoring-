<form action="/restaurants/{{restaurant._id}}?_method=put" method="POST">
  <div>
    餐廳名稱(必填)
    <input type="text" name="name" placeholder="餐廳名稱" value="{{{restaurant.name}}}" size="50" required>
  </div>
  <div>
    餐廳英文名稱
    <input type="text" name="nameEn" placeholder="餐廳英文名稱" value="{{{restaurant.nameEn}}}" size="46">
  </div>
  <div>
    餐廳類別(必填)
    <input type="text" name="category" placeholder="餐廳類別" value="{{{restaurant.category}}}" size="50" required>
  </div>
  <div>
    餐廳地址(必填)
    <input type="text" name="location" placeholder="餐廳地址" value="{{{restaurant.location}}}" size="50" required>
  </div>
  <div>
    餐廳電話(必填)
    <input type=" text" name="phone" placeholder="餐廳電話" value="{{{restaurant.phone}}}" size="50" required>
  </div>
  <div>
    餐廳評分(0~5分)
    <input type="number" name="rating" placeholder="評分" value="{{{restaurant.rating}}}" size="50" step="0.1" min="0"
      max="5">
  </div>
  <div>
    餐廳照片
    <input type=" text" name="image" placeholder="餐廳照片" value="{{{restaurant.image}}}" size="80">
  </div>
  <div>
    關於餐廳
    <input type=" text" name="description" placeholder="關於餐廳" value="{{{restaurant.description}}}" size="80">
  </div>
  <div>
    google map
    <input type="url" name="googleMap" placeholder="google map" value="{{{restaurant.googleMap}}}" size="77">
  </div>
  <button type="submit">送出表單</button>
  <a href="/">back</a>
</form>